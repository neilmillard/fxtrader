<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="FxTrader Application">
    <meta name="author" content="Neil Millard">

    <link rel="shortcut icon" href="{{ base_url() }}/img/icons/favicon.ico" type="image/x-icon">

    <title>{% block page_title %}FX Trader{% endblock %}</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- Custom styles for this template -->
    <link href="{{ base_url() }}/css/jumbotron-narrow.css" rel="stylesheet">
    <link href="{{ base_url() }}/css/style.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
{% block nav %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ base_url() }}{{ path_for('homepage') }}">FX Trader</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
            {% if hasIdentity %}
                <ul class="nav navbar-nav navbar-right">
                    {% if identity.role == 'ADMIN' %}
                        <li><a href="{{ base_url() }}{{ path_for('admin') }}">AdminMenu</a></li>
                    {% endif %}
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Settings<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ base_url() }}{{ path_for('accounts') }}">Accounts</a></li>
                        </ul>
                    </li>
                    <li><a href="{{ base_url() }}{{ path_for('profile') }}">Profile</a></li>
                    <li><a href="{{ base_url() }}{{ path_for('logout') }}">Logout</a></li>
                </ul>

            {% else %}
                <form action="login" method="post" class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" name="username" placeholder="Email" class="form-control" value autofocus
                               required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-success">Sign in</button>
                </form>
            {% endif %}
            </div>
    </div>
    </nav>
{% endblock nav %}

<div class="container">
    {% if flash is not empty %}
        <div class="alert alert-danger">
            {% for message in flash %}
            {{ message }}<br/>
            {% endfor %}
        </div>
    {% endif %}

    {% block jumbotron %}
    {% endblock %}

    <div class="row">
        {% block content %} {% endblock %}
    </div>

    <hr>
    <footer>
        <p class="text-muted credit">
            (c) <a href="http://www.neilmillard.com/">N Millard</a>.
        </p>
    </footer>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="//netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

{% block javascript %} {% endblock %}

</body>
</html>
