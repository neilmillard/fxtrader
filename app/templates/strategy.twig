{% extends 'layout.twig' %}

{% block page_title %}{{ parent() }} | Strategy{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content %}
    <div style="text-align: left">
        <a class="btn" style="background: #3498db;color: #ffffff;" href="{{ base_url() }}{{ path_for('adminstrategies') }}">
            Strategies
        </a>
    </div>
    <div>
    <form class="form-signin well well-sm" role="form" name="strategy" id="strategy" method="post">
        <h2 class="form-signin-heading">Manage Strategy</h2>
        <input type="text" name="name" class="form-control" placeholder="name" value="{{ strategy.name }}" required>
        <input type="text" name="description" class="form-control" placeholder="description" value="{{ strategy.description }}" required>
        <span>Instrument: </span><select name="instrument">
            {% for pair in instruments %}

                <option value="{{ pair }}" {% if strategy.instrument==pair %}selected="selected"{% endif %}>{{ pair}}</option>
            {% endfor %}
        </select><br/>
        <span>Exit Strategy: </span><select name="strategyexit">
            <option value="1" {% if strategy.strategyexit==1 %}selected="selected"{% endif %}>1%</option>
            <option value="3" {% if strategy.strategyexit==3 %}selected="selected"{% endif %}>3 Bar</option>
            <option value="2" {% if strategy.strategyexit==2 %}selected="selected"{% endif %}>signal custom</option>
        </select><br/>
        <span>Entry Signal:</span><select name="signal">
            {% for signal in signallist %}
                <option value="{{ signal.name }}" {% if strategy.signal==signal.name %}selected="selected"{% endif %}>{{ signal.name}}</option>
            {% endfor %}
        </select>
        <span>Options</span>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
    </form>
    </div>
    <br/><br/>

{% endblock %}

{% block javascript %}

{% endblock %}