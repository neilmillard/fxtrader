{% extends 'layout.twig' %}

{% block page_title %}{{ parent() }} | Users{% endblock %}

{% block content %}
    <div class="page-header">
        <h3>Users</h3>
    </div>
    <div class="row">
        {% for user in users %}
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">{{ user.email }}</div>
                    <div class="panel-body">
                        <p> Fullname: {{ user.fullname }}</p>
                        <a class="btn btn-warning"
                           href="{{ base_url() }}{{ path_for('edituser',{'username': hashemail}) }}">
                            Update
                        </a>
                    </div>
                </div>
            </div>
{% endfor %}
    </div>
    <div>
        <a class="btn btn-success" href="{{ base_url() }}{{ path_for('edituser',{'username': 'new'}) }}">Create New
            User</a>
    </div>
<br/><br/>

{% endblock %}